{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)(workflow-templates|\\.(?:github|gitea|forgejo)/(?:workflows|actions))/.+\\.ya?ml$",
        "(^|/)action\\.ya?ml$"
      ],
      "matchStringsStrategy": "recursive",
      "matchStrings": [
        "uses: luiz-couto/(?:ops-actions|gcp-auth-action)/(?<depName>.*?)@\\s*(?<currentDigest>.*)",
        "uses: luiz-couto/.github/.github/(?:workflows|actions)/(?<depName>.*?)@\\s*(?<currentDigest>.*)",
        
        "uses: luiz-couto/tutorial-go-math-island/actions/(?<depName>.*?)@main #\\s*(?<currentDigest>.*)"
      ],
      "autoReplaceStringTemplate": "uses: luiz-couto/tutorial-go-math-island/actions/{{{depName}}}@main #{{{newDigest}}}",
      "datasourceTemplate": "git-refs",
      "currentValueTemplate": "main",
      "packageNameTemplate": "https://github.com/luiz-couto/tutorial-go-math-island",
      "depTypeTemplate": "action"
    }
  ]
}
