{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)(workflow-templates|\.(?:github|gitea|forgejo)/(?:workflows|actions))/.+\.ya?ml$",
        "(^|/)action\.ya?ml$"
      ],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "luiz-couto/ops-actions-tests-v3/.github/actions/(?<depName>.*?)@\\s*(?<currentDigest>.*)",
        "luiz-couto/tutorial-go-math-island/actions/(?<depName>.*?)@main #\\s*(?<currentDigest>.*)"
      ],
      "autoReplaceStringTemplate": "luiz-couto/tutorial-go-math-island/actions/{{{depName}}}@main #{{{newDigest}}}",
      "datasourceTemplate": "git-refs",
      "currentValueTemplate": "main",
      "packageNameTemplate": "https://github.com/luiz-couto/tutorial-go-math-island",
      "depTypeTemplate": "action"
    }
  ]
}
